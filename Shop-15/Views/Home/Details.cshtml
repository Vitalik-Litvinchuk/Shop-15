@model Shop_15.Models.ViewModels.DetailVM

<div class="col">
    <a asp-action="Index" class="btn btn-warning"><i class="fas fa-sign-out-alt"></i>Back</a>
    <a asp-action="Index" class="btn btn-success"><i class="fas fa-sign-out-alt"></i>Add to cart</a>
</div>
<div class="main-panel">
    <div class="container">
        <div class="row overflow-hidden" >
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="profile-card p-3">

                        <div class="profile-header">

                            <div class="cover-image">
                                <img class="img-fluid d-block mx-auto mb-3" src="@ENV.PathImage@Model.Product.Image">
                            </div>
                        </div>

                        <div class="profile-content">
                            <span class="badge p-2 border w-100" style="background-color:azure">@Model.Product.Category.Name</span>
                            <div><h4 class="float-left">@Model.Product.Name</h4></div>
                            <div><h1 class="float-right"><span class="text-info">@Model.Product.Price&#8372;</span></h1> </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-8" >
                <div class="card">
                    <div class="card-body">
                        <p class="card-title font-weight-bold">About</p>
                        <hr>
                        <div class="col-12 pt-2"" style="font-size:13px; text-align:justify; overflow:auto;">
                            @Html.Raw(@Model.Product.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
