@model List<Shop_15.Models.Product>

<form method="post" asp-action="Order">
    @if (Model.Count > 0)
    {
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 pb-4 ">
                        <partial model="item" name="_productCardCart" />
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <h1 class="text-center">Cart is empty</h1>
    }

    <button type="submit" class="btn btn-success form-control w-25">
        <span>Order</span>
    </button>
</form>
