@model IEnumerable<Shop_15.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category name</th>
                    <th>Show orders</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td width="30%">@item.ShowOrder</td>
                        <td width="20%" class="text-center">
                            <div class="btn-group w-75">
                                <a class="btn btn-warning mr-1" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit">Edit</a>
                                <a class="btn btn-danger ml-1" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            No category found.
        </p>
    }
</div>